            LeButton:
                text: "3"
            
            LeButton:
                text: "+"
            
            LeButton:
                text: "4"

            LeButton:
                text: "5"
            
            LeButton:
                text: "6"
            
            LeButton:
                text: "-"
            
            LeButton:
                text: "7"

            LeButton:
                text: "8"
            
            LeButton:
                text: "9"
            
            LeButton:
                text: "/"
            
            LeButton:
                text: "c"

